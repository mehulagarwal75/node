<div class="wrapper">
    <div class="sidebar">
        <h3>Admin Panel</h3>
        <hr>
        <ul style="list-style:none; padding:0;">
            <li style="padding:10px 0;"><a href="/dashboard" style="color:white; text-decoration:none;">Dashboard</a></li>
            <li style="padding:10px 0;"><a href="/addAdminPage" style="color:white; text-decoration:none;">Add Admin</a></li>
            <li style="padding:10px 0;"><a href="/viewAdminPage" style="color:white; text-decoration:none;">View Admins</a></li>
            <li style="padding:10px 0;"><a href="/logout" style="color:#ff7675; text-decoration:none;">Logout</a></li>
        </ul>
    </div>

    <div class="main-content">
        <header style="display:flex; justify-content:space-between; align-items:center;">
            <h1>Welcome, <%= admin.fname %>!</h1>
            <img src="/<%= admin.profile_image %>" class="profile-thumb">
        </header>
        
        <div class="card">
            <h3>Profile Statistics</h3>
            <p>Email: <%= admin.email %></p>
            <p>Phone: <%= admin.phone %></p>
        </div>
    </div>
</div>