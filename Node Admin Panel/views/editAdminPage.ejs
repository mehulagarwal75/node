<%- include('header') %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12">
                <h3 class="page-title"><i class="mdi mdi-pencil-box"></i> Edit Administrator</h3>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 mx-auto">
                <div class="card shadow-lg" style="border-radius: 15px; border: none;">
                    <div class="card-body p-5">
                        <h4 class="card-title text-center mb-4" style="color: #1e88e5; font-weight: 600;">Update Administrator Details</h4>

                        <form class="form-horizontal" method="post" action="/editAdmin/<%= admin.id %>" enctype="multipart/form-data">
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-6">
                                    <!-- FirstName -->
                                    <div class="form-group mb-3">
                                        <label for="fname" class="form-label"><i class="mdi mdi-account"></i> First Name</label>
                                        <input type="text" class="form-control rounded-pill" name="fname" value="<%= admin.fname %>" id="fname" placeholder="First Name" style="padding: 10px 20px;">
                                    </div>

                                    <!-- Email  -->
                                    <div class="form-group mb-3">
                                        <label class="form-label"><i class="mdi mdi-email"></i> Email</label>
                                        <input type="email" class="form-control rounded-pill" name="email" value="<%= admin.email %>" id="email" placeholder="Email" style="padding: 10px 20px;">
                                    </div>

                                    <!-- Password -->
                                    <div class="form-group mb-3">
                                        <label class="form-label"><i class="mdi mdi-lock"></i> Password</label>
                                        <input type="password" class="form-control rounded-pill" name="password" value="<%= admin.password %>" id="password" placeholder="Password" style="padding: 10px 20px;">
                                    </div>

                                    <!-- Contact No  -->
                                    <div class="form-group mb-3">
                                        <label class="form-label"><i class="mdi mdi-phone"></i> Contact Number</label>
                                        <input type="text" class="form-control rounded-pill" name="contact" value="<%= admin.contact %>" id="contact" placeholder="Contact No" style="padding: 10px 20px;">
                                    </div>

                                    <!-- City -->
                                    <div class="form-group mb-3">
                                        <label class="form-label"><i class="mdi mdi-map-marker"></i> City</label>
                                        <select class="form-control rounded-pill" name="city" style="padding: 10px 20px;">
                                            <option value="">Select City</option>
                                            <%["Surat", "Baroda", "Navsari", "Rajkot", "Mumbai"].map((city)=> { %>
                                                <option <% if(admin.city===city ) {%> selected <%}%> value="<%= city %>"><%= city %></option>
                                            <%})%>
                                        </select>
                                    </div>
                                </div>

                                <!-- Right Column -->
                                <div class="col-md-6">
                                    <!-- Last Name -->
                                    <div class="form-group mb-3">
                                        <label for="lname" class="form-label"><i class="mdi mdi-account"></i> Last Name</label>
                                        <input type="text" class="form-control rounded-pill" name="lname" value="<%= admin.lname %>" id="lname" placeholder="Last Name" style="padding: 10px 20px;">
                                    </div>

                                    <!-- Gender -->
                                    <div class="form-group mb-3">
                                        <label class="form-label"><i class="mdi mdi-gender-male-female"></i> Gender</label>
                                        <div class="d-block">
                                            <div class="form-check form-check-inline">
                                                <input type="radio" class="form-check-input" value="Male" id="male" name="gender" <% if(admin.gender==='Male') {%> checked <%}%> required>
                                                <label class="form-check-label" for="male">Male</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input type="radio" class="form-check-input" value="Female" id="female" name="gender" <% if(admin.gender==='Female') {%> checked <%}%> required>
                                                <label class="form-check-label" for="female">Female</label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Hobby -->
                                    <div class="form-group mb-3">
                                        <label class="form-label"><i class="mdi mdi-gamepad-variant"></i> Hobby</label>
                                        <div>
                                            <% ["Reading", "Playing", "Other"].map((hobby, index)=> { %>
                                                <div class="form-check">
                                                    <input type="checkbox" name="hobby[]" value="<%= hobby %>" class="form-check-input" id="hobby<%= index %>" <% if(admin.hobby && admin.hobby.includes(hobby)) {%> checked <%}%>>
                                                    <label class="form-check-label" for="hobby<%= index %>"><%= hobby %></label>
                                                </div>
                                            <% })%>
                                        </div>
                                    </div>

                                    <!-- Profile Image -->
                                    <div class="form-group mb-3">
                                        <label class="form-label"><i class="mdi mdi-image"></i> Profile Image</label>
                                        <div class="mb-2">
                                            <img src="/uploads/admin/<%= admin.profile_image %>" class="rounded-circle shadow" height="60" style="border: 3px solid #1e88e5;">
                                        </div>
                                        <input type="file" name="profile_image" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <!-- About -->
                            <div class="form-group mb-3">
                                <label class="form-label"><i class="mdi mdi-information"></i> About</label>
                                <textarea class="form-control" name="about" rows="3" placeholder="Tell about this administrator" style="border-radius: 10px;"><%= admin.about %></textarea>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-lg px-5 text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 50px; font-weight: 600;">UPDATE</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') %>
