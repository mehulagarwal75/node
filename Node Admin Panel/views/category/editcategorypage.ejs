<%- include('../header') %>
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12">
                    <h3 class="page-title"><i class="mdi mdi-pencil"></i> Edit Category</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg" style="border-radius: 15px; border: none;">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4" style="color: #333; font-weight: 600;">Update Category Details</h5>
                        <form action="/editCategory/<%= category._id %>" method="POST" enctype="multipart/form-data">
                            <div class="form-group mb-4">
                                <label for="categoryName" class="form-label font-weight-bold">Category Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg" id="categoryName" name="categoryName" value="<%= category.categoryName %>" required>
                            </div>
                            <div class="form-group mb-4">
                                <label for="categoryDescription" class="form-label font-weight-bold">Description</label>
                                <textarea class="form-control" id="categoryDescription" name="categoryDescription" rows="4"><%= category.categoryDescription || '' %></textarea>
                            </div>
                            <div class="form-group mb-4">
                                <label for="categoryImage" class="form-label font-weight-bold">Category Image</label>
                                <div class="mb-2">
                                    <% if(category.categoryImage) { %>
                                        <img src="/uploads/admin/<%= category.categoryImage %>" class="rounded" width="100" height="100" style="object-fit: cover; border: 2px solid #1e88e5; display: block; margin-bottom: 10px;">
                                    <% } %>
                                </div>
                                <input type="file" class="form-control form-control-lg" id="categoryImage" name="categoryImage" accept="image/*">
                                <small class="text-muted">Allowed formats: JPG, PNG, GIF (Max 5MB)</small>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-lg text-white" style="background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%); border-radius: 25px; padding: 10px 40px;"><i class="mdi mdi-check"></i> Update Category</button>
                                <a href="/viewCategoryPage" class="btn btn-lg btn-secondary" style="border-radius: 25px; padding: 10px 40px;"><i class="mdi mdi-close"></i> Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../footer') %>
