<%- include('../header') %>
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12">
                    <h3 class="page-title"><i class="mdi mdi-pencil"></i> Edit Sub Extra Category</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg" style="border-radius: 15px; border: none;">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4" style="color: #333; font-weight: 600;">Update Sub Extra Category Details</h5>
                        <form action="/editSubExtraCategory/<%= subExtraCategory._id %>" method="POST" enctype="multipart/form-data">
                            <div class="form-group mb-4">
                                <label for="categoryId" class="form-label font-weight-bold">Category <span class="text-danger">*</span></label>
                                <select class="form-control form-control-lg" id="categoryId" name="categoryId" required>
                                    <option value="">Select Category</option>
                                    <% categories.forEach((cat) => { %>
                                        <option value="<%= cat._id %>" <%= subExtraCategory.categoryId._id.toString() === cat._id.toString() ? 'selected' : '' %>><%= cat.categoryName %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group mb-4">
                                <label for="subCategoryId" class="form-label font-weight-bold">Sub Category <span class="text-danger">*</span></label>
                                <select class="form-control form-control-lg" id="subCategoryId" name="subCategoryId" required>
                                    <option value="">Select Sub Category</option>
                                    <% subCategories.forEach((subCat) => { %>
                                        <option value="<%= subCat._id %>" <%= subExtraCategory.subCategoryId._id.toString() === subCat._id.toString() ? 'selected' : '' %>><%= subCat.subCategoryName %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group mb-4">
                                <label for="subExtraCategoryName" class="form-label font-weight-bold">Sub Extra Category Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg" id="subExtraCategoryName" name="subExtraCategoryName" value="<%= subExtraCategory.subExtraCategoryName %>" required>
                            </div>
                            <div class="form-group mb-4">
                                <label for="subExtraCategoryDescription" class="form-label font-weight-bold">Description</label>
                                <textarea class="form-control" id="subExtraCategoryDescription" name="subExtraCategoryDescription" rows="4"><%= subExtraCategory.subExtraCategoryDescription || '' %></textarea>
                            </div>
                            <div class="form-group mb-4">
                                <label for="subExtraCategoryImage" class="form-label font-weight-bold">Sub Extra Category Image</label>
                                <div class="mb-2">
                                    <% if(subExtraCategory.subExtraCategoryImage) { %>
                                        <img src="/uploads/admin/<%= subExtraCategory.subExtraCategoryImage %>" class="rounded" width="100" height="100" style="object-fit: cover; border: 2px solid #1e88e5; display: block; margin-bottom: 10px;">
                                    <% } %>
                                </div>
                                <input type="file" class="form-control form-control-lg" id="subExtraCategoryImage" name="subExtraCategoryImage" accept="image/*">
                                <small class="text-muted">Allowed formats: JPG, PNG, GIF (Max 5MB)</small>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-lg text-white" style="background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%); border-radius: 25px; padding: 10px 40px;"><i class="mdi mdi-check"></i> Update Sub Extra Category</button>
                                <a href="/viewSubExtraCategoryPage" class="btn btn-lg btn-secondary" style="border-radius: 25px; padding: 10px 40px;"><i class="mdi mdi-close"></i> Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../footer') %>
