<%- include('../header') %>
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12">
                    <h3 class="page-title"><i class="mdi mdi-pencil"></i> Edit Sub Category</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg" style="border-radius: 15px; border: none;">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4" style="color: #333; font-weight: 600;">Update Sub Category Details</h5>
                        <form action="/editSubCategory/<%= subCategory._id %>" method="POST" enctype="multipart/form-data">
                            <div class="form-group mb-4">
                                <label for="categoryId" class="form-label font-weight-bold">Parent Category <span class="text-danger">*</span></label>
                                <select class="form-control form-control-lg" id="categoryId" name="categoryId" required>
                                    <option value="">Select Category</option>
                                    <% categories.forEach((cat) => { %>
                                        <option value="<%= cat._id %>" <%= subCategory.categoryId._id.toString() === cat._id.toString() ? 'selected' : '' %>><%= cat.categoryName %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group mb-4">
                                <label for="subCategoryName" class="form-label font-weight-bold">Sub Category Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg" id="subCategoryName" name="subCategoryName" value="<%= subCategory.subCategoryName %>" required>
                            </div>
                            <div class="form-group mb-4">
                                <label for="subCategoryDescription" class="form-label font-weight-bold">Description</label>
                                <textarea class="form-control" id="subCategoryDescription" name="subCategoryDescription" rows="4"><%= subCategory.subCategoryDescription || '' %></textarea>
                            </div>
                            <div class="form-group mb-4">
                                <label for="subCategoryImage" class="form-label font-weight-bold">Sub Category Image</label>
                                <div class="mb-2">
                                    <% if(subCategory.subCategoryImage) { %>
                                        <img src="/uploads/admin/<%= subCategory.subCategoryImage %>" class="rounded" width="100" height="100" style="object-fit: cover; border: 2px solid #1e88e5; display: block; margin-bottom: 10px;">
                                    <% } %>
                                </div>
                                <input type="file" class="form-control form-control-lg" id="subCategoryImage" name="subCategoryImage" accept="image/*">
                                <small class="text-muted">Allowed formats: JPG, PNG, GIF (Max 5MB)</small>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-lg text-white" style="background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%); border-radius: 25px; padding: 10px 40px;"><i class="mdi mdi-check"></i> Update Sub Category</button>
                                <a href="/viewSubCategoryPage" class="btn btn-lg btn-secondary" style="border-radius: 25px; padding: 10px 40px;"><i class="mdi mdi-close"></i> Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../footer') %>
