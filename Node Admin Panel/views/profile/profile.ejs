<%- include("../header") %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* ================= VARIABLES ================= */
        :root {
            --primary: #435ebe;
            --primary-dark: #32469b;
            --text-dark: #2b3445;
            --text-light: #7e8da0;
            --bg-body: #f3f5f9;
            --white: #ffffff;
            --border: #e0e6ed;
            --card-bg: #f8fafc;
            --shadow: 0 10px 30px rgba(67, 94, 190, 0.08);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', 'Segoe UI', sans-serif;
        }

        /* ================= LAYOUT ================= */
        body {
            background-color: var(--bg-body);
            color: var(--text-dark);
            height: 100vh;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .page-wrapper {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            overflow: hidden;
        }

        .settings-container {
            display: flex;
            background: var(--white);
            width: 100%;
            max-width: 1100px;
            height: 100%;
            max-height: 700px;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: var(--shadow);
            border: 1px solid var(--white);
        }

        /* ================= SIDEBAR ================= */
        .sidebar {
            width: 300px;
            background: linear-gradient(180deg, #fbfdff 0%, #f0f4fcf5 100%);
            padding: 30px;
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
        }

        .profile-card {
            text-align: center;
            margin-bottom: 30px;
        }

        .image-wrapper {
            width: 120px;
            height: 120px;
            margin: 0 auto 15px;
        }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid var(--white);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .profile-card h3 {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 4px;
        }

        .profile-card p {
            font-size: 12px;
            color: var(--primary);
            font-weight: 600;
            background: rgba(67, 94, 190, 0.1);
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
        }

        /* Menu */
        .menu {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 12px 18px;
            border-radius: 12px;
            color: var(--text-light);
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: 0.2s;
            text-decoration: none;
        }

        .menu-item i {
            margin-right: 12px;
            width: 20px;
            text-align: center;
        }

        .menu-item:hover {
            background: #eef2fa;
            color: var(--primary);
        }

        .menu-item.active {
            background: var(--primary);
            color: white;
            box-shadow: 0 4px 15px rgba(67, 94, 190, 0.3);
        }

        /* ================= CONTENT AREA ================= */
        .content-area {
            flex: 1;
            padding: 40px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }

        /* Scrollbar */
        .content-area::-webkit-scrollbar {
            width: 6px;
        }

        .content-area::-webkit-scrollbar-thumb {
            background-color: #cbd5e1;
            border-radius: 10px;
        }

        .content-area::-webkit-scrollbar-track {
            background: transparent;
        }

        .header-text {
            margin-bottom: 30px;
            border-bottom: 1px solid var(--border);
            padding-bottom: 20px;
        }

        .header-text h2 {
            font-size: 24px;
            color: var(--text-dark);
            font-weight: 700;
        }

        .header-text span {
            font-size: 13px;
            color: var(--text-light);
        }

        /* GRID */
        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .info-label {
            font-size: 12px;
            font-weight: 600;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value-box {
            display: flex;
            align-items: center;
            background: var(--card-bg);
            padding: 16px;
            border-radius: 12px;
            border: 1px solid transparent;
            transition: 0.3s;
        }

        .info-value-box:hover {
            background: #fff;
            border-color: var(--primary);
            box-shadow: 0 4px 15px rgba(67, 94, 190, 0.08);
        }

        .info-value-box i {
            font-size: 18px;
            color: var(--primary);
            margin-right: 15px;
            opacity: 0.8;
        }

        .info-text {
            font-size: 15px;
            font-weight: 600;
            color: var(--text-dark);
        }

        /* ================= BUTTON STYLE FIXED ================= */
        .action-area {
            margin-top: auto;
            padding-top: 30px;
            display: flex;
            justify-content: flex-end;
        }

        .btn-edit {
            text-decoration: none;
            background: linear-gradient(135deg, var(--primary), #6b7cff);
            color: var(--white) !important;
            /* Force White Color */
            padding: 14px 35px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 8px 20px rgba(67, 94, 190, 0.25);
            transition: 0.3s;
            border: none;
            cursor: pointer;
        }

        /* Link visited state ka color change na ho isliye ye jaroori hai */
        .btn-edit:visited,
        .btn-edit:active,
        .btn-edit:focus {
            color: var(--white) !important;
        }

        .btn-edit:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(67, 94, 190, 0.35);
            background: linear-gradient(135deg, #32469b, #5a6be0);
            color: var(--white) !important;
        }

        /* RESPONSIVE */
        @media (max-width: 900px) {
            body {
                height: auto;
                overflow: auto;
            }

            .page-wrapper {
                display: block;
                height: auto;
                padding: 15px;
            }

            .settings-container {
                flex-direction: column;
                height: auto;
                max-height: none;
            }

            .sidebar {
                width: 100%;
                border-right: none;
                padding: 20px;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .action-area {
                justify-content: center;
            }

            .btn-edit {
                width: 100%;
                justify-content: center;
            }
        }
    </style>

    <div class="page-wrapper">
        <div class="settings-container">

            <div class="sidebar">
                <div class="profile-card">
                    <div class="image-wrapper">
                        <img src="<%= admin.profile_image %>" alt="Profile">
                    </div>
                    <h3>
                        <%= admin.fname %>
                            <%= admin.lname %>
                    </h3>
                    <p>Super Admin</p>
                </div>

                <div class="menu">
                    <a href="#" class="menu-item">
                        <i class="fa-regular fa-user"></i> My Profile
                    </a>
                    <a href="#" class="menu-item">
                        <i class="fa-solid fa-shield-halved"></i> Security
                    </a>
                    <a href="/logout" class="menu-item">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
                    </a>
                </div>
            </div>

            <div class="content-area">
                <div class="header-text">
                    <div>
                        <h2>My Profile</h2>
                        <span>View your personal information.</span>
                    </div>
                </div>

                <div class="info-grid">

                    <div class="info-item">
                        <span class="info-label">First Name</span>
                        <div class="info-value-box">
                            <i class="fa-regular fa-user"></i>
                            <span class="info-text">
                                <%= admin.fname %>
                            </span>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-label">Last Name</span>
                        <div class="info-value-box">
                            <i class="fa-regular fa-user"></i>
                            <span class="info-text">
                                <%= admin.lname %>
                            </span>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-label">Email Address</span>
                        <div class="info-value-box">
                            <i class="fa-regular fa-envelope"></i>
                            <span class="info-text">
                                <%= admin.email %>
                            </span>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-label">Phone Number</span>
                        <div class="info-value-box">
                            <i class="fa-solid fa-phone"></i>
                            <span class="info-text">
                                <%= admin.phone %>
                            </span>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-label">City</span>
                        <div class="info-value-box">
                            <i class="fa-solid fa-location-dot"></i>
                            <span class="info-text">
                                <%= admin.city %>
                            </span>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-label">Country</span>
                        <div class="info-value-box">
                            <i class="fa-solid fa-globe"></i>
                            <span class="info-text">India</span>
                        </div>
                    </div>

                </div>

                <div class="action-area">
                    <a href="/editAdmin/<%= admin.id %>" class="btn-edit">
                        <i class="fa-solid fa-pen-to-square"></i> Edit Profile
                    </a>
                </div>

            </div>

        </div>
    </div>

    <%- include("../footer") %>