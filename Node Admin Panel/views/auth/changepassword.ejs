<%- include("../header") %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary: #4361ee;
            --primary-dark: #3a56d4;
            --dark: #1e293b;
            --gray: #64748b;
            --light-gray: #94a3b8;
            --white: #ffffff;
            --radius: 24px;
            --input-radius: 14px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* ❌ overflow hidden REMOVED */
        html,
        body {
            height: 100%;
            font-family: 'Segoe UI', system-ui, sans-serif;
            background: radial-gradient(circle at top left, #eff6ff, #f8fafc);
        }

        /* MAIN WRAPPER */
        .app-wrapper {
            min-height: 87vh;
            display: flex;
            flex-direction: column;
        }

        /* CENTER CONTENT */
        .page-content {
            flex: 1;
            /* ✅ footer ke liye space */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        /* CARD */
        .split-card {
            width: 100%;
            max-width: 900px;
            height: 480px;
            display: flex;
            background: var(--white);
            border-radius: var(--radius);
            box-shadow: 0 25px 45px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
        }

        .split-card::before {
            content: '';
            position: absolute;
            top: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary), #4cc9f0);
        }

        /* LEFT SIDE */
        .card-visual {
            flex: 0.9;
            background: #f1f5f9;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        .shield-icon-wrapper {
            position: absolute;
            top: 30px;
            right: 30px;
            width: 46px;
            height: 46px;
            background: #eef2ff;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .shield-icon-wrapper i {
            font-size: 22px;
            color: var(--primary);
        }

        .card-visual h2 {
            font-size: 30px;
            font-weight: 800;
            color: var(--dark);
            margin-bottom: 10px;
        }

        .card-visual p {
            font-size: 15px;
            color: var(--gray);
        }

        /* RIGHT SIDE */
        .card-form {
            flex: 1.1;
            padding: 40px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            color: var(--gray);
            margin-bottom: 8px;
        }

        .input-wrapper {
            position: relative;
        }

        .icon-left {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--light-gray);
        }

        .form-control {
            width: 100%;
            padding: 14px 46px;
            border-radius: var(--input-radius);
            border: 2px solid transparent;
            background: #f1f5f9;
            font-size: 14px;
        }

        .form-control:focus {
            border-color: var(--primary);
            background: #fff;
            outline: none;
        }

        .toggle-pass {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: var(--light-gray);
        }

        .toggle-pass:hover {
            color: var(--primary);
        }

        .btn-update {
            margin-top: 10px;
            padding: 14px;
            border-radius: var(--input-radius);
            border: none;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
        }

        .btn-update:hover {
            opacity: 0.95;
        }
    </style>

    <div class="app-wrapper">

        <div class="page-content">
            <div class="split-card">

                <div class="card-visual">
                    <div class="shield-icon-wrapper">
                        <i class="fas fa-shield-halved"></i>
                    </div>
                    <h2>Change Password</h2>
                    <p>Keep your admin account secure</p>
                </div>

                <div class="card-form">
                    <form method="post" action="/change-password">

                        <div class="form-group">
                            <label class="form-label">Current Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock icon-left"></i>
                                <input type="password" name="current_password" placeholder="Enter Current Password"
                                    class="form-control" required>
                                <i class="fas fa-eye toggle-pass"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">New Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-key icon-left"></i>
                                <input type="password" name="new_password" placeholder="Enter New Password"
                                    class="form-control" required>
                                <i class="fas fa-eye toggle-pass"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Confirm Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-check-circle icon-left"></i>
                                <input type="password" name="confirm_password" placeholder="Enter Confirm Password"
                                    class="form-control" required>
                                <i class="fas fa-eye toggle-pass"></i>
                            </div>
                        </div>

                        <button class="btn-update">Update Password</button>
                    </form>
                </div>

            </div>
        </div>

        <%- include("../footer") %>

    </div>

    <script>
        document.querySelectorAll(".toggle-pass").forEach(icon => {
            icon.addEventListener("click", function () {
                const input = this.previousElementSibling;
                input.type = input.type === "password" ? "text" : "password";
                this.classList.toggle("fa-eye-slash");
                this.classList.toggle("fa-eye");
            });
        });
    </script>