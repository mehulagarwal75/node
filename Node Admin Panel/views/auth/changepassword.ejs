<%- include('../header') %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12">
                <h3 class="page-title"><i class="mdi mdi-lock"></i> Change Password</h3>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg" style="border-radius: 15px; border: none;">
                    <div class="card-body p-5">
                        <h4 class="card-title text-center mb-4" style="color: #764ba2; font-weight: 600;">Update Your Password</h4>

                        <form method="post" action="/change-password">
                            <!-- Current Password -->
                            <div class="form-group mb-4">
                                <label class="form-label"><i class="mdi mdi-lock-outline"></i> Current Password</label>
                                <input type="password" class="form-control rounded-pill" name="oldPassword" placeholder="Enter current password" style="padding: 10px 20px;" required>
                            </div>

                            <!-- New Password -->
                            <div class="form-group mb-4">
                                <label class="form-label"><i class="mdi mdi-lock-check"></i> New Password</label>
                                <input type="password" class="form-control rounded-pill" name="newPassword" placeholder="Enter new password" style="padding: 10px 20px;" required>
                            </div>

                            <!-- Confirm Password -->
                            <div class="form-group mb-4">
                                <label class="form-label"><i class="mdi mdi-lock-check-outline"></i> Confirm Password</label>
                                <input type="password" class="form-control rounded-pill" name="confirmPassword" placeholder="Confirm your password" style="padding: 10px 20px;" required>
                            </div>

                            <button type="submit" class="btn btn-lg btn-block text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 50px; font-weight: 600; padding: 10px;">UPDATE PASSWORD</button>
                        </form>

                        <div class="text-center mt-4">
                            <a href="/profile" class="text-muted"><i class="mdi mdi-arrow-left"></i> Back to Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

